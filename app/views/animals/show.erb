<div class="title">
  <h2 class="title__heading">Show Animal: <%= @animal.name %></h2>
</div>

<div class="profile-full">
  <img class="profile__img"
    src="<%= @animal.image_url().nil?() || @animal.image_url().empty? ? '/images/default.jpeg' : @animal.image_url() %>"
    alt="<%= @animal.name() %> profile photo">
  <p>Name: <%= @animal.name() %></p>
  <p>Type: <%= @animal.type() %></p>
  <p>Admission date: <%= @animal.admission_date() %></p>
  <p>Available for adoption: <%= @animal.available_for_adoption() == "t" ? "Yes" : "No" %></p>
  <p>Owner:
    <% if (@animal.owner_id() && @owner) %>
      <a href="/owners/<%= @animal.owner_id()%>"><%= @owner.name() %></a>
    <% else %>
      No owner
    <% end %>
  </p>
  <a class="btn" href="/animals/<%= @animal.id %>/edit">Edit</a>
  <form style="display: inline" action="/animals/<%= @animal.id %>/delete" method="post">
    <input class="btn" type="submit" value="Delete">
  </form>
</div>
