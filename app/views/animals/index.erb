<nav class="navbar">
  <ul class="navbar__list navbar__list-b">
    <li class="navbar__li"><a class="navbar__lis-a btn-nav-b" href="/animals/new">New</a></li>
    <li class="navbar__li"><a class="navbar__lis-a btn-nav-b" href="/animals/filters/unavailable">Unavailable</a></li>
    <li class="navbar__li"><a class="navbar__lis-a btn-nav-b" href="/animals/filters/available">Available</a></li>
    <li class="navbar__li"><a class="navbar__lis-a btn-nav-b" href="/animals/filters/adopted">Adopted</a></li>
  </ul>
</nav>

<div class="title">
  <h2 class="title__heading">All Animals</h2>

  <div class="title__search">
    <form class="" action="/animals/search" method="get">
      <input class="title__search-input" type="text" name="type" placeholder="Search type...">
    </form>
  </div>
</div>

<div class="grid">
  <% if @animals.any? %>
    <% @animals.each() do |animal| %>
      <article class="grid__item profile-a">
        <div class="profile-a__header">
          <img class="profile-a__img" src="<%= animal.image_url() ? animal.image_url() : '/images/default.jpeg' %>" alt="<%= animal.name() %> profile photo">
        </div>
        <div class="profile-a__body">
          <h3 class="profile-a__name" ><%= animal.name() %></h3>
          <p>Admission date: <%= animal.admission_date() %></p>
          <p>Adopted: <%= animal.has_owner?() ? "Yes" : "No" %></p>
        </div>
        <div class="profile-a__footer">
          <a class="btn" href="/animals/<%= animal.id %>">Show</a>
          <a class="btn" href="/animals/<%= animal.id %>/edit">Edit</a>
          <form style="display: inline" action="/animals/<%= animal.id %>/delete" method="post">
            <input class="btn" type="submit" value="Delete">
          </form>
        </div>
      </article>
    <% end %>
  <% else %>
    <p>No results found.</p>
  <% end %>
</div>
